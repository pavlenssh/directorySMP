<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/teal_200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/diagnosis_name"
            android:text="Diagnosis"
            android:textSize="18sp"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_relative_layout"
            android:background="@color/teal_700">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount_of_care"
                android:text="Объём медицинской помощи:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount_of_care_text_view"
                android:text="Объём медицинской помощи:13213123"
                android:textSize="14sp"
                android:layout_below="@id/amount_of_care"
                android:textColor="@color/black"
                android:paddingStart="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tactics"
                android:text="Тактика:"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingStart="16dp"
                android:layout_below="@id/amount_of_care_text_view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tactics_text_view"
                android:text="Тактика:3213132"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:paddingStart="24dp"
                android:layout_below="@id/tactics"/>


        </RelativeLayout>

    </LinearLayout>


    
</androidx.cardview.widget.CardView>